<!DOCTYPE html>
<html lang="pt-br" data-bs-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oikos Portal</title>
    <link rel="canonical" href="https://oikosportal.com.br/">
    <meta property="og:url" content="https://oikosportal.com.br/">
    <meta property="og:type" content="website">
    <meta name="description" content="Portal de beneficios com streaming com foco em conteudo cristão , e descontos em diversos servicos.">
    <script type="application/ld+json">
        {
            "@@context": "http://schema.org",
            "@@type": "WebSite",
            "name": "Portal Oikos",
            "url": "https://oikosportal.com.br"
        }
    </script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OikosPortal.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/images/logoColorido1.png" type="image/jpg">
</head>

<style>
    .btn-primary {
        background-color: #F6822C;
        border-color: #F6822C;
    }

    .btn-primary:hover {
            background-color: #fed136;
            border-color: #fed136;
    }
</style>

<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img src="~/images/logo.png" width="120" alt=""
                     srcset="">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-end">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Beneficios">Beneficios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Streaming">Streaming</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Identity"
                               asp-page="/Account/Manage/Index">Perfil</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="#beneficios">Beneficios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#streaming" >Streaming</a>
                        </li>
                        <li class="nav-item ms-4">
                            <a class="btn btn-primary rounded-pill" asp-area="Identity"
                               asp-page="/Account/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; @DateTime.Now.Year - Oikos
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>